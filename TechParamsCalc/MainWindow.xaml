<Window x:Class="TechParamsCalc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TechParamsCalc"       
        
        
        mc:Ignorable="d"
        Title="TechParamsCalc" Height="600" Width="1000" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow" Closed="Window_Closed" Loaded="Window_Loaded"
        Icon="/icons8_test_tube_16.png" Closing="Window_Closing" Background="#FF2E2E2E" SizeToContent="Manual">


    <Window.Resources>
        <!-- Посредник для анимации кнопок -->
        <FrameworkElement x:Key="AnimationButtonPlaceholder" Width="60"/>

        <local:TestPlaceHolder x:Key="AnimationPlaceholder" ButtonWidth="60" GridWidth="70"/>

        <!-- Посредник для анимации гридов -->
        <FrameworkElement x:Key="AnimationGridPlaceholder" Width="auto"/>

        <Storyboard x:Key="OpenMenu">
            <!--Анимация для значка HamburgerMenu-->
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" Storyboard.TargetName="rectangle">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="43.5"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" Storyboard.TargetName="rectangle1">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="-43.5"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="rectangle2">
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0"/>
            </DoubleAnimationUsingKeyFrames>

            <!--Анимация для области экрана -->
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="70"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="300"/>
            </DoubleAnimationUsingKeyFrames>

            <!--Анимация для кнопок HamburgerMenu-->
            <DoubleAnimationUsingKeyFrames Storyboard.Target="{StaticResource AnimationPlaceholder}" Storyboard.TargetProperty="(local:TestPlaceHolder.ButtonWidth)" >
                <EasingDoubleKeyFrame KeyTime="0" Value="60"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="290"/>
            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames Storyboard.Target="{StaticResource AnimationPlaceholder}" Storyboard.TargetProperty="(local:TestPlaceHolder.GridWidth)" >
                <EasingDoubleKeyFrame KeyTime="0" Value="70"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="300"/>
            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames Storyboard.Target="{StaticResource AnimationPlaceholder}" Storyboard.TargetProperty="(local:TestPlaceHolder.LabelOpacity)" >
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="1"/>
            </DoubleAnimationUsingKeyFrames>

        </Storyboard>

        <Storyboard x:Key="CloseMenu">
            <!--Анимация для значка HamburgerMenu-->
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" Storyboard.TargetName="rectangle">
                <EasingDoubleKeyFrame KeyTime="0" Value="43.5"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[2].(RotateTransform.Angle)" Storyboard.TargetName="rectangle1">
                <EasingDoubleKeyFrame KeyTime="0" Value="-43.5"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="rectangle2">
                <EasingDoubleKeyFrame KeyTime="0" Value="0"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="1"/>
            </DoubleAnimationUsingKeyFrames>

            <!--Анимация для области экрана -->
            <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="GridMenu">
                <EasingDoubleKeyFrame KeyTime="0" Value="300"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="70"/>
            </DoubleAnimationUsingKeyFrames>


            <!--Анимация для кнопок HamburgerMenu-->
            <DoubleAnimationUsingKeyFrames Storyboard.Target="{StaticResource AnimationPlaceholder}" Storyboard.TargetProperty="(local:TestPlaceHolder.ButtonWidth)" >
                <EasingDoubleKeyFrame KeyTime="0" Value="290"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="60"/>
            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames Storyboard.Target="{StaticResource AnimationPlaceholder}" Storyboard.TargetProperty="(local:TestPlaceHolder.GridWidth)" >
                <EasingDoubleKeyFrame KeyTime="0" Value="300"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="70"/>
            </DoubleAnimationUsingKeyFrames>

            <DoubleAnimationUsingKeyFrames Storyboard.Target="{StaticResource AnimationPlaceholder}" Storyboard.TargetProperty="(local:TestPlaceHolder.LabelOpacity)" >
                <EasingDoubleKeyFrame KeyTime="0" Value="1"/>
                <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0"/>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>

        <!--Стиль для кнопок HamburgerMenu-->
        <Style TargetType="Button" x:Key="ButtonStyle" BasedOn="{StaticResource MaterialDesignFlatDarkBgButton}">
            <!--BasedOn="{StaticResource MaterialDesignFlatDarkBgButton}"-->
            <Style.Setters>
                <!--<Setter Property="Width" Value="{Binding Source={StaticResource AnimationPlaceholder}, Path=ButtonWidth}"/>-->
                <Setter Property="Width" Value="auto"/>
                <Setter Property="Height" Value="50"/>
                <Setter Property="Margin" Value="5 5 5 0"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="Background" Value="#FF666666"/>
                <Setter Property="BorderBrush" Value="#FF666666"/>
                <!--#FF030008-->
                <EventSetter Event="Click" Handler="HamburgerMenuButton_Click" />
            </Style.Setters>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"  Value="True">
                    <Setter Property="BorderBrush" Value="#FF278E98" />
                </Trigger>
                <Trigger Property="IsMouseOver"  Value="False">
                    <Setter Property="BorderBrush" Value="#FF666666" />
                </Trigger>
            </Style.Triggers>

        </Style>

        <!--Стиль для гридов кнопок HamburgerMenu-->
        <Style TargetType="Grid" x:Key="GridStyle" >
            <Style.Setters>
                <!--<Setter Property="Width" Value="{Binding Source={StaticResource AnimationPlaceholder}, Path=GridWidth}"/>-->
                <Setter Property="Width" Value="auto"/>
                <Setter Property="Height" Value="auto"/>
                <!--<Setter Property="Margin" Value="-2 -2 -2 -2"/>-->
                <Setter Property="VerticalAlignment" Value="Center"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
            </Style.Setters>
        </Style>

        <!--Стиль для лабелов кнопок HamburgerMenu-->
        <Style TargetType="Label" x:Key="LabelStyle" >
            <Style.Setters>
                <Setter Property="Opacity" Value="{Binding Source={StaticResource AnimationPlaceholder}, Path=LabelOpacity}"/>
            </Style.Setters>
        </Style>

        <Grid x:Key="CommonGrid" Style="{StaticResource GridStyle}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" />
            <Label Grid.Column="1" Style="{StaticResource LabelStyle}" />
        </Grid>


        <!--Общая кнопка для всех кнопок HamburgerMenu-->
        <Button x:Key="resButton" Style="{StaticResource ButtonStyle}">
            <Grid Style="{StaticResource GridStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <!--<Image Grid.Column="0" Source="Source\PC.png"/>
                <Label Grid.Column="1" Content="OPC Server Settings" Style="{StaticResource LabelStyle}" />-->
            </Grid>
        </Button>


        <ContextMenu x:Key="TrayMenu" Style="{StaticResource MaterialDesignMenu}">
            <MenuItem Header="Show" Click="MenuShowClick" />
            <Separator />
            <MenuItem Header="Start Calculation" Click="MenuStartCalculation" IsEnabled="False"/>
            <MenuItem Header="Stop Calculation" Click="MenuStopCalculation" IsEnabled="True"/>
            <Separator />
            <MenuItem Header="Exit" Click="MenuExitClick" />
        </ContextMenu>

    </Window.Resources>



    <Grid x:Name="BaseGrid" Background="#FF383838" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.1*"/>
            <ColumnDefinition Width="*" />
            <!--<ColumnDefinition Width="127"/>-->
            <!--<ColumnDefinition Width="64"/>-->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="GridMenu" HorizontalAlignment="Center" Width="auto" Height="auto" Grid.RowSpan="1" >
            <!--Background="#FF2E2E2E"-->
            <StackPanel>
                <!--<Grid Height="70" Background="White" Visibility="Hidden"/>-->

                <!--Кнопка "Домой" -->
                <Button x:Name="HomeButton" Style="{StaticResource ButtonStyle}">
                    <Grid Style="{StaticResource GridStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <!--<ColumnDefinition Width="auto"/>-->
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Stretch="None" Source="/Source/home_48px.png"/>
                        <Label Grid.Column="1" Content="Parameters indications" Style="{StaticResource LabelStyle}"/>
                    </Grid>
                </Button>

                <!--Кнопка "Настройки OPC" -->
                <Button x:Name="OPCSetButton" Style="{StaticResource ButtonStyle}">
                    <Grid Style="{StaticResource GridStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <!--<ColumnDefinition Width="auto"/>-->
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="/Source/settings_48px.png"/>
                        <Label Grid.Column="1" Content="OPC Server Settings" Style="{StaticResource LabelStyle}" />
                    </Grid>
                </Button>

                <!--Кнопка "Настройки БД" -->
                <!--<Button x:Name="DataSetButton" Style="{StaticResource ButtonStyle}">
                    <Grid Style="{StaticResource GridStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="Source\SDCard.png"/>
                        <Label Grid.Column="1" Content="Data Access Settings" Style="{StaticResource LabelStyle}"  />
                    </Grid>
                </Button>-->

                <!--Кнопка "Настройки сети" -->
                <!--<Button x:Name="NetSetButton"  Style="{StaticResource ButtonStyle}">
                    <Grid Style="{StaticResource GridStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="Source\Server.png" />
                        <Label Grid.Column="1" Content="Server Connection Settings" Style="{StaticResource LabelStyle}"   />
                    </Grid>
                </Button>-->

                <!--Кнопка "Лог" -->
                <Button x:Name="LogButton"  Style="{StaticResource ButtonStyle}">
                    <Grid Style="{StaticResource GridStyle}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <!--<ColumnDefinition Width="auto"/>-->
                        </Grid.ColumnDefinitions>
                        <Image Grid.Column="0" Source="/Source/list_48px.png"/>
                        <Label Content="Error Log" Style="{StaticResource LabelStyle}" Height="42" VerticalAlignment="Bottom"  />
                    </Grid>
                </Button>

                <!--<Button x:Name="StartCalc" Content="Start" Width="auto" Height="50" Background="#FFE0D6D6" Foreground="#DD0E0D0D" BorderBrush="#FFE0D6D6" FontSize="16" Click="StartCalculationButton_Click"  Margin="0,4,0,0" IsEnabled="True" />-->
                <!--<Button x:Name="StartCalculationButton" Content="Start" Grid.Column="0" Grid.Row="0" Margin="0,0,0,0"   Width="105" Height="35" Background="#FFE0D6D6" Foreground="#DD0E0D0D" BorderBrush="#FFE0D6D6" FontSize="16" Click="StartCalculationButton_Click"  IsEnabled="False" />-->
            </StackPanel>

            <!--Кнопка "HamburgerMenu" -->
            <Button x:Name="ButtonMenu" HorizontalAlignment="Right" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="{x:Null}" Width="70" Height="70" Click="ButtonMenu_Click" Visibility="Hidden">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Rectangle x:Name="rectangle"  Width="30" Height="5" Margin="0 0 0 0"  Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Top" RenderTransformOrigin="-0,0.5">
                        <Rectangle.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Rectangle.RenderTransform>
                    </Rectangle>
                    <Rectangle x:Name="rectangle1" Width="30" Height="5" Margin="0 20 0 0" Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Top"  RenderTransformOrigin="-0,0.5">
                        <Rectangle.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Rectangle.RenderTransform>
                    </Rectangle>
                    <Rectangle x:Name="rectangle2" Width="30" Height="5" Margin="0 10 0 0"  Fill="Black" HorizontalAlignment="Center" VerticalAlignment="Top"  RenderTransformOrigin="-0,0.5">
                        <Rectangle.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Rectangle.RenderTransform>
                    </Rectangle>
                </Grid>
            </Button>

        </Grid>

        <!--Product version-->
        <!--<StackPanel Orientation="Vertical" FlowDirection="LeftToRight" Grid.Column="0" Grid.Row="2" Margin="0,0,0,0">-->
        <!--Кнопка "Start" -->
        <Button x:Name="StartCalculationButton" Style="{StaticResource ButtonStyle}" Grid.Column="0" Grid.Row="2" Click="StartCalculationButton_Click" Width="80.909090909091" Height="29.909" IsEnabled="False" Margin="0,-30,0,0" Padding="16,4,16,4">
            <Grid Style="{StaticResource GridStyle}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>
                <Label Content="Start" Height="32" VerticalAlignment="Center" HorizontalAlignment="Center" />
                
            </Grid>
        </Button>
        <Label     x:Name="Version"  Content="Version 2.01"    Grid.Column="0" Grid.Row="2" Margin="5,0,0,0"   Foreground="Gray" HorizontalAlignment="Left"   VerticalAlignment="Bottom" FontSize="12"/>
        <!--<Rectangle x:Name="CalculatedEventRectangle"           Grid.Column="0" Grid.Row="2" Margin="0,0,0,0" Height="30" Fill="#FF8F8F8F" Stroke="Black" StrokeThickness="1"  Width="auto"/>-->
        <!--</StackPanel>-->

        <Grid x:Name="ContentGrid" Grid.Column="2" Height="auto" Width="auto" Margin="5,5,5,5" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <!--<ColumnDefinition Width="0.03*"/>-->
            </Grid.ColumnDefinitions>
        </Grid>

        <StackPanel Orientation="Vertical" FlowDirection="LeftToRight" Grid.Column="2" Grid.Row="2" Margin="0,0,0,0">
            <Grid Grid.Column="1" Grid.Row="3"  Margin="0 0 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="0.15*"/>
                    <ColumnDefinition Width="0.1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Label   x:Name="ServerSyncRole"             Content="Primary Server:"    Grid.Column="1" Grid.Row="0" Margin="5,0,0,0"   Foreground="Gray" HorizontalAlignment="Left"   VerticalAlignment="Center" FontSize="12"/>
                <Label   x:Name="ServerSyncRect1"            Content="waiting..."         Grid.Column="2" Grid.Row="0" Margin="0 0 10 0"  Foreground="Black"     HorizontalAlignment="Right"  VerticalAlignment="Center" FontSize="12" FontWeight="Normal"/>

                <Label   x:Name="ServerSyncWritingStatus"    Content="Secondary Server:"  Grid.Column="1" Grid.Row="1" Margin="5 0 0 0"   Foreground="Gray" HorizontalAlignment="Left"   VerticalAlignment="Center" FontSize="12"/>
                <Label   x:Name="ServerSyncRect2"            Content="waiting..."         Grid.Column="2" Grid.Row="1" Margin="0 0 10 0"  Foreground="Black"     HorizontalAlignment="Right"  VerticalAlignment="Center" FontSize="12" FontWeight="Normal"/>

                <ProgressBar x:Name="ProgressBarInit" Grid.Column="0" Grid.Row="1" Margin="10,0,10,0" Height="18"  Foreground="#FF666666" Background="#FF383838" BorderBrush="Black"/>
                <TextBlock x:Name="TextProgressBarInit" Text="{Binding ElementName=ProgressBarInit, Path=Value, StringFormat={}{0:0}%}" Grid.Column="0" Grid.Row="1" Margin="10,0,10,0" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFDDDDDD" />

            </Grid>
           
            <!--<Line Stretch="Fill"  Stroke="Black" X2="1" VerticalAlignment="Top"/>-->
            <!--<Button x:Name="StartCalculationButton" Content="Start" Width="105" Height="35" Background="#FFE0D6D6" Foreground="#DD0E0D0D" BorderBrush="#FFE0D6D6" FontSize="16" Click="StartCalculationButton_Click"  Margin="10,8,0,7" IsEnabled="False" Visibility="Collapsed" />-->
            <!--<Button x:Name="CancelCalculationButton" Content="Stop Calc" Width="105" Height="35" Background="#FFE0D6D6" Foreground="#DD0E0D0D" BorderBrush="#FFE0D6D6" FontSize="16" Click="CancelCalculationButton_Click"  Margin="10,8,0,7" IsEnabled="True" Visibility="Visible" />-->
            <!--<Rectangle x:Name="ServerSyncRect2" Height="20" Width="20" HorizontalAlignment="Left" Margin="5,4,0,0" Fill="#FF8F8F8F" Stroke="Black" StrokeThickness="1"/>
            <Rectangle x:Name="ServerSyncRect1" Height="20" Width="20" HorizontalAlignment="Left" Margin="5,5,0,0" Fill="#FF8F8F8F" Stroke="Black" StrokeThickness="1"/>-->
        </StackPanel>

    </Grid>
</Window>
