<UserControl x:Class="TechParamsCalc.UserControls.ParametersUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TechParamsCalc.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.09*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <StackPanel x:Name ="ParameterFilterPanel" Grid.Column="1" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <!--<Label Content="Search by Name: " FontWeight="Bold" Foreground="#FFDDDDDD"/>
            <TextBox Width="150" DockPanel.Dock="Left"/>-->
            <Label Content="Atmo Pressure: "                   Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center" Width="auto" FontSize="12"/>
            <Label x:Name="AtmoPressureLabel" Content="x.xxxx" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center" Width="auto" FontSize="12"/>
            <Label Content="bar" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center" Width="auto" FontSize="12"/>
        </StackPanel>

        <Label x:Name="ParameterLabel" Content="Parameters" Margin="0 0 0 0" Foreground="Gray" HorizontalAlignment="Center" VerticalAlignment="Center" Width="auto" FontSize="14" FontWeight="Bold"/>
        
        <Grid x:Name="ParameterGrid" Grid.Column="0" Grid.Row="1" Margin="5 5 5 5">
            <TabControl Width="auto">
                <TabItem Header="Capacities" MouseUp="TabItem_MouseUp">
                    <DataGrid x:Name="CapacityGrid" AutoGenerateColumns="False" HorizontalGridLinesBrush="DarkGray"  RowBackground="LightGray" AlternatingRowBackground="White" FontSize="12" SelectionMode="Single" SelectionChanged="CapacityGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#"              Binding="{Binding Path=Id}"                 Width="45"  IsReadOnly="true" Selector.IsSelected="False" />
                            <DataGridCheckBoxColumn Header="Writable"   Binding="{Binding Path=IsWriteble}"         Width="80"  IsReadOnly="true" Selector.IsSelected="False"/>
                            <DataGridTextColumn Header="Tag"            Binding="{Binding Path=TagName}"            Width="200" IsReadOnly="true" Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Value"          Binding="{Binding Path=ValCalc}"            Width="70"  IsReadOnly="true" Selector.IsSelected="False"/>
                        </DataGrid.Columns>
                    </DataGrid>

                </TabItem>
                <TabItem Header="Densities" MouseUp="TabItem_MouseUp_1">
                    <DataGrid x:Name="DensityGrid" AutoGenerateColumns="False" HorizontalGridLinesBrush="DarkGray"  RowBackground="LightGray" AlternatingRowBackground="White" FontSize="12" SelectionMode="Single" SelectionChanged="DensityGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#"              Binding="{Binding Path=Id}"                 Width="45"  IsReadOnly="true"  Selector.IsSelected="False" />
                            <DataGridCheckBoxColumn Header="Writable"   Binding="{Binding Path=IsWriteble}"         Width="80"  IsReadOnly="true"  Selector.IsSelected="False"/>
                            <DataGridTextColumn Header="Tag"            Binding="{Binding Path=TagName}"            Width="200" IsReadOnly="true"  Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Value"          Binding="{Binding Path=ValCalc}"            Width="70"  IsReadOnly="true"  Selector.IsSelected="False"/>
                            <!--<DataGridTextColumn Header="Description" Binding="{Binding Path=Description}" Width="200" IsReadOnly="true" Selector.IsSelected="False" />-->
                            <!--<DataGridTextColumn Header="Content" Binding="{Binding Path=PercDescription[0]}" Width="200" IsReadOnly="true" Selector.IsSelected="False" />-->

                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>

                <TabItem Header="Contents" MouseUp="TabItem_MouseUp_2">
                    <DataGrid x:Name="ContentGrid" AutoGenerateColumns="False" HorizontalGridLinesBrush="DarkGray"  RowBackground="LightGray" AlternatingRowBackground="White" FontSize="12" SelectionMode="Single" SelectionChanged="ContentGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#"              Binding="{Binding Path=Id}"                 Width="45"  IsReadOnly="true"  Selector.IsSelected="False" />
                            <DataGridCheckBoxColumn Header="Writable"   Binding="{Binding Path=IsWriteble}"         Width="80"  IsReadOnly="true"  Selector.IsSelected="False"/>
                            <DataGridTextColumn Header="Tag"            Binding="{Binding Path=TagName}"            Width="200" IsReadOnly="true"  Selector.IsSelected="False" />
                            <!--<DataGridTextColumn Header="Value" Binding="{Binding Path=ValCalc[0]}" Width="70" IsReadOnly="true" Selector.IsSelected="False"/>-->
                            <!--<DataGridTextColumn Header="Description" Binding="{Binding Path=Description}" Width="200" IsReadOnly="true" Selector.IsSelected="False" />-->

                            <DataGridTextColumn Header="Comp1"          Binding="{Binding Path=PercDescription[0]}" Width="75"  IsReadOnly="true"  Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Value1"         Binding="{Binding Path=ValCalc[0]}"         Width="75"  IsReadOnly="true"  Selector.IsSelected="False" />

                            <DataGridTextColumn Header="Comp2"          Binding="{Binding Path=PercDescription[1]}" Width="75"   IsReadOnly="true" Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Value1"         Binding="{Binding Path=ValCalc[1]}"         Width="75"   IsReadOnly="true" Selector.IsSelected="False" />

                            <DataGridTextColumn Header="Comp3"          Binding="{Binding Path=PercDescription[2]}" Width="75"  IsReadOnly="true"  Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Value1"         Binding="{Binding Path=ValCalc[2]}"         Width="75"  IsReadOnly="true"  Selector.IsSelected="False" />

                            <DataGridTextColumn Header="Comp4"          Binding="{Binding Path=PercDescription[3]}" Width="75"   IsReadOnly="true" Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Value1"         Binding="{Binding Path=ValCalc[3]}"         Width="75"   IsReadOnly="true" Selector.IsSelected="False" />

                            <DataGridTextColumn Header="Comp5"          Binding="{Binding Path=PercDescription[4]}" Width="75"  IsReadOnly="true"  Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Value1"         Binding="{Binding Path=ValCalc[4]}"         Width="75"  IsReadOnly="true"  Selector.IsSelected="False" />

                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
                <TabItem Header="Tanks" MouseUp="TabItem_MouseUp_3">
                    <DataGrid x:Name="TankGrid" AutoGenerateColumns="False" HorizontalGridLinesBrush="DarkGray"  RowBackground="LightGray" AlternatingRowBackground="White" FontSize="12" SelectionMode="Single" SelectionChanged="TankGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="#"              Binding="{Binding Path=Id}"              Width="45"  IsReadOnly="true"  Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Tag"            Binding="{Binding Path=TagName}"         Width="200" IsReadOnly="true" Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Distance A"     Binding="{Binding Path=DistanceA}"       Width="100" IsReadOnly="true" Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Distance B"     Binding="{Binding Path=DistanceB}"       Width="100" IsReadOnly="true" Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Probe Lenght"   Binding="{Binding Path=ProbeLength}"     Width="100" IsReadOnly="true" Selector.IsSelected="False" />
                            <DataGridTextColumn Header="To distance A"  Binding="{Binding Path=DistToDistanceA}" Width="110" IsReadOnly="true" Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Level"          Binding="{Binding Path=Level.TagName}"   Width="200" IsReadOnly="true" Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Density"        Binding="{Binding Path=Density.TagName}" Width="200" IsReadOnly="true" Selector.IsSelected="False" />

                            <DataGridTextColumn Header="Id"             Binding="{Binding Path=Tank.id}"         Width="45"  IsReadOnly="true" Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Tank Def"       Binding="{Binding Path=Tank.tankDef}"    Width="100" IsReadOnly="true" Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Type"           Binding="{Binding Path=Tank.type}"       Width="100" IsReadOnly="true" Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Dim A"          Binding="{Binding Path=Tank.dimA}"       Width="100" IsReadOnly="true" Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Dim B"          Binding="{Binding Path=Tank.dimB}"       Width="100" IsReadOnly="true" Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Dim C"          Binding="{Binding Path=Tank.dimC}"       Width="100" IsReadOnly="true" Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Dim D"          Binding="{Binding Path=Tank.dimD}"       Width="100" IsReadOnly="true" Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Dim E"          Binding="{Binding Path=Tank.dimE}"       Width="100" IsReadOnly="true" Selector.IsSelected="False" />
                            <DataGridTextColumn Header="Dim F"          Binding="{Binding Path=Tank.dimF}"       Width="100" IsReadOnly="true" Selector.IsSelected="False" />
                        </DataGrid.Columns>
                    </DataGrid>
                </TabItem>
            </TabControl>
        </Grid>

        <!--Not selected grid-->
        <Grid x:Name="ParameterGridNotSelected" Grid.Column="1" Grid.Row="1" Margin="5 5 5 5" Width="auto" Height="auto" Visibility="Visible" Background="#FF666666">
            <Label   x:Name="contentUpNotSelected"      Content="not selected"     Margin="10 0 0 0"   Foreground="#FF383838"      HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14"/>
